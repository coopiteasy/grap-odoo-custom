<odoo>

    <!-- FORM - Customer Invoice -->
    <record id="view_account_invoice_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="priority">300</field>
        <field name="arch" type="xml">
            <button name="action_invoice_open" position="after">
                <button name="action_invoice_sent" type="object" string="Send by Email" attrs="{'invisible':[('state', 'not in', ['draft','paid'])]}" groups="base.group_user"/>
            </button>
            <!-- Change names -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                <attribute name="string">Qty</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='uom_id']" position="attributes">
                <attribute name="string">UoM</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="string">U.P.</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                <attribute name="string">Disc. (%)</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="string">S.T.</attribute>
            </xpath>
            <field name="date_invoice" position="attributes">
              <attribute name="required">1</attribute>
            </field>
            <!-- Move some fields -->
            <field name="team_id" position="replace"/>
            <field name="user_id" position="replace"/>
            <field name="payment_term_id" position="replace"/>
            <field name="reference" position="before">
                <field name="payment_term_id"/>
                <field name="team_id" position="replace"/>
                <field name="user_id" position="replace"/>
            </field>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
             </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="decoration-warning">discount&gt;90</attribute>
             </xpath>
        </field>
    </record>

    <!-- FORM - Supplier Invoice -->
    <record id="view_account_invoice_form_supplier" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="priority">300</field>
        <field name="arch" type="xml">
<!--             <button name="action_invoice_verify" position="attributes">
                <attribute name="attrs">{'invisible': ['|',
                    ('intercompany_trade','=', True),
                    ('state','not in', ['draft']),
                ]}</attribute>
                <attribute name="states" position="replace"/>
            </button>
            <button name="action_invoice_open" position="attributes">
                <attribute name="attrs">{'invisible': ['|',
                    ('intercompany_trade','=', True),
                    ('state','not in', ['draft', 'verified']),
                ]}</attribute>
                <attribute name="states" position="replace"/>
            </button> -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                <attribute name="string">Qty</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='uom_id']" position="attributes">
                <attribute name="string">UoM</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="string">UP</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="string">ST</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
             </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                <attribute name="string">Disc. 1 (%)</attribute>
            </xpath>
             <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount2']" position="attributes">
                 <attribute name="string">Disc. 2 (%)</attribute>
                 <attribute name="groups"/>
             </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="class">grap_change_views__view_account_invoice_supplier_form</attribute>
                <attribute name="decoration-warning">discount&gt;90</attribute>
             </xpath>
            <xpath expr="//button[@name='check_supplierinfo']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('supplierinfo_ok', '=', True), ('type', '=', 'in_refund')]}</attribute>
            </xpath>
        </field>
    </record>

    <!--TREE - Supplier invoice -->
    <record id="view_account_invoice_supplier_tree" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <!-- Move Number -->
            <field name="number" position="replace"/>
            <field name="date_invoice" position="before">
                <field name="number"/>
            </field>
            <!-- Move Partner -->
            <field name="partner_id" position="replace"/>
            <field name="date_invoice" position="after">
                <field name="partner_id" string="Supplier"/>
            </field>
            <!-- Move Due Date -->
            <field name="date_due" position="replace"/>
            <field name="residual_signed" position="after">
                <field name="date_due"/>
            </field>
            <!-- Move company -->
            <field name="state" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
            </field>
        </field>
    </record>


    <!-- TREE - Customer invoice -->
    <record id="view_account_invoice_tree" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="priority">300</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">amount_total_signed&lt;0</attribute>
            </xpath>
            <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <!-- Move Partner -->
            <field name="partner_id" position="replace"/>
            <field name="date_invoice" position="after">
                <field name="partner_id"/>
            </field>
            <!-- Move Number -->
            <field name="number" position="replace"/>
            <field name="date_invoice" position="before">
                <field name="number"/>
            </field>
            <!-- Move Due Date -->
            <field name="date_due" position="replace"/>
            <field name="residual_signed" position="after">
                <field name="date_due"/>
            </field>
            <!-- Move company -->
            <field name="company_id" position="replace"/>
            <field name="state" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
            </field>
            <!-- Display supplier Invoice for out invoice and refund -->
            <field name="origin" position="after">
                <field name="supplier_invoice_number"
                    invisible="context.get('type', '') in ['out_invoice', 'out_refund']"/>
            </field>
        </field>
    </record>

    <record id="view_account_invoice_search" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="number" position="attributes">
                <attribute name="filter_domain">['|', '|', ('number','ilike',self),('origin','ilike',self),('reference','ilike',self)]</attribute>
            </field>
        </field>
    </record>

</odoo>
