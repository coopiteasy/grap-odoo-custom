<odoo>

    <record id="view_sale_grouped_wizard_form" model="ir.ui.view">
        <field name="model">sale.grouped.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Producion Plan">
              <div class="wizard_options">
                <h5>üîß Choose options</h5><br/>
                <label for="option_print_bom"/><field name="option_print_bom" widget="boolean_toggle"/><br/>
              </div>
              <h5>üñ®Ô∏è Sum up sales concerned</h5>
              <group colspan="2">
                  <group col="4" colspan="2">
                      <field name="line_ids" nolabel="1">
                          <tree create="false" editable="0">
                              <field name="sale_id"/>
                              <field name="sale_partner_id"/>
                           </tree>
                      </field>
                  </group>
              </group>
              <footer>
                  <button name="print_report" string="Print Production Plan" type="object" icon="fa-print" class="oe_highlight"/>
                  <button icon="fa-ban" special="cancel" string="Cancel"/>
              </footer>
            </form>
        </field>
    </record>

</odoo>
