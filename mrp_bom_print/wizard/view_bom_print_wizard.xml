<odoo>

    <record id="view_bom_print_wizard_form" model="ir.ui.view">
        <field name="model">bom.print.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Bill of Materials">
                <label for="option_allergens_only_code"/><field name="option_allergens_only_code"/>
                <group colspan="2">
                    <group col="4" colspan="2">
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="bom_id"/>
                                <field name="bom_allergens_ids"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" icon="fa-print" class="oe_highlight"/>
                        <button icon="fa-ban" special="cancel" string="Cancel"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_mrp_bom_print_wizard" model="ir.actions.act_window">
        <field name="name">Print Bill of Materials</field>
        <field name="res_model">bom.print.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- <field name="binding_model_id" ref="mrp.model_mrp_bom"></field> -->
    </record>

</odoo>
